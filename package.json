{
  "name": "@tomkp/hetzner-tui",
  "version": "2.0.0",
  "description": "Interactive terminal UI for managing Hetzner Cloud and DNS resources",
  "type": "module",
  "bin": {
    "hetzner": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomkp/hetzner-tui.git"
  },
  "bugs": {
    "url": "https://github.com/tomkp/hetzner-tui/issues"
  },
  "homepage": "https://github.com/tomkp/hetzner-tui#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["hetzner", "cloud", "dns", "tui", "terminal", "interactive"],
  "author": "tomkp",
  "license": "MIT",
  "engines": {
    "node": ">=22.6.0"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@tomkp/hetzner": "^0.2.0",
    "conf": "^13.1.0",
    "ink": "^5.2.1",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.0",
    "@types/react": "^18.3.27",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.4"
  }
}
